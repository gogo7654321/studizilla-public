'use client';

import { useState, useTransition, useEffect, useRef, useCallback } from 'react';
import { Button } from '@/components/ui/button';
import { Card } from '@/components/ui/card';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogTrigger } from '@/components/ui/dialog';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Textarea } from '@/components/ui/textarea';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { Badge } from '@/components/ui/badge';
import { useToast } from '@/hooks/use-toast';
import { Plus, Trash2, Edit, FileUp, HelpCircle, GraduationCap, Clock } from 'lucide-react';
import type { CourseContent, StudyGuide } from '@/lib/course-content-schema';
import { addStudyGuide, updateStudyGuide, deleteStudyGuide } from '../actions';
import { parseStudyGuidesWithUnits, STUDYGUIDE_FORMAT_GUIDE, type StudyGuideWithUnit } from '@/lib/bulk-import-parser';

interface StudyGuidesTabProps {
  content: CourseContent;
  courseId: string;
  onUpdate: () => void | Promise<void>;
}

export function StudyGuidesTab({ content, courseId, onUpdate }: StudyGuidesTabProps) {
  const [isCreateOpen, setIsCreateOpen] = useState(false);
  const [isBulkImportOpen, setIsBulkImportOpen] = useState(false);
  const [isFormatGuideOpen, setIsFormatGuideOpen] = useState(false);
  const [editingGuide, setEditingGuide] = useState<StudyGuide | null>(null);
  const [bulkText, setBulkText] = useState('');
  const [parsedGuides, setParsedGuides] = useState<StudyGuideWithUnit[]>([]);
  const [isPending, startTransition] = useTransition();
  const [uploadProgress, setUploadProgress] = useState({ current: 0, total: 0 });
  const { toast } = useToast();

  // Auto-parse with debounce (like flashcards)
  const parseTimeoutRef = useRef<NodeJS.Timeout | null>(null);
  
  useEffect(() => {
    if (parseTimeoutRef.current) {
      clearTimeout(parseTimeoutRef.current);
    }

    if (!bulkText.trim()) {
      setParsedGuides([]);
      return;
    }

    parseTimeoutRef.current = setTimeout(() => {
      try {
        const parsed = parseStudyGuidesWithUnits(bulkText);
        setParsedGuides(parsed);
      } catch (error) {
        setParsedGuides([]);
      }
    }, 500);

    return () => {
      if (parseTimeoutRef.current) {
        clearTimeout(parseTimeoutRef.current);
      }
    };
  }, [bulkText]);

  const [formData, setFormData] = useState({
    title: '',
    description: '',
    content: '',
    difficulty: 'intermediate' as 'beginner' | 'intermediate' | 'advanced',
    estimatedTime: '',
    tags: '',
    coverImage: ''
  });

  const resetForm = () => {
    setFormData({
      title: '',
      description: '',
      content: '',
      difficulty: 'intermediate',
      estimatedTime: '',
      tags: '',
      coverImage: ''
    });
    setEditingGuide(null);
  };

  const handleEdit = (guide: StudyGuide) => {
    setFormData({
      title: guide.title,
      description: guide.description || '',
      content: guide.content,
      difficulty: guide.difficulty,
      estimatedTime: guide.estimatedTime || '',
      tags: guide.tags?.join(', ') || '',
      coverImage: guide.coverImage || ''
    });
    setEditingGuide(guide);
    setIsCreateOpen(true);
  };

  const handleSaveGuide = () => {
    startTransition(async () => {
      try {
        const guideData = {
          title: formData.title,
          description: formData.description,
          content: formData.content,
          difficulty: formData.difficulty,
          estimatedTime: formData.estimatedTime || undefined,
          tags: formData.tags.split(',').map(t => t.trim()).filter(t => t),
          coverImage: formData.coverImage || undefined,
        };

        if (editingGuide) {
          await updateStudyGuide(courseId, editingGuide.id, guideData);
          toast({ title: 'Success', description: 'Study guide updated!' });
        } else {
          const newGuide: StudyGuide = {
            ...guideData,
            id: crypto.randomUUID(),
            createdAt: new Date().toISOString(),
            updatedAt: new Date().toISOString()
          };
          await addStudyGuide(courseId, newGuide);
          toast({ title: 'Success', description: 'Study guide created!' });
        }

        setIsCreateOpen(false);
        resetForm();
        onUpdate();
      } catch (error: any) {
        toast({ title: 'Error', description: error.message, variant: 'destructive' });
      }
    });
  };

  const handleSaveBulkGuides = useCallback(() => {
    startTransition(async () => {
      try {
        setUploadProgress({ current: 0, total: parsedGuides.length });
        
        const batchSize = 10;
        
        // Upload in batches of 10 for faster performance
        for (let i = 0; i < parsedGuides.length; i += batchSize) {
          const batch = parsedGuides.slice(i, Math.min(i + batchSize, parsedGuides.length));
          
          await Promise.all(batch.map(guide => {
            const fullGuide: StudyGuide = {
              id: crypto.randomUUID(),
              title: guide.title || '',
              content: guide.content || '',
              difficulty: guide.difficulty || 'intermediate',
              tags: guide.tags || [],
              ...(guide.description && { description: guide.description }),
              ...(guide.coverImage && { coverImage: guide.coverImage }),
              ...(guide.estimatedTime && { estimatedTime: guide.estimatedTime }),
              createdAt: new Date().toISOString(),
              updatedAt: new Date().toISOString()
            } as StudyGuide;

            return addStudyGuide(courseId, fullGuide);
          }));
          
          setUploadProgress({ current: Math.min(i + batchSize, parsedGuides.length), total: parsedGuides.length });
        }

        toast({
          title: '‚úÖ Upload Complete!',
          description: `Successfully added ${parsedGuides.length} study guide(s)!`
        });
        
        setIsBulkImportOpen(false);
        setBulkText('');
        setParsedGuides([]);
        setUploadProgress({ current: 0, total: 0 });
        onUpdate();
      } catch (error: any) {
        toast({ title: 'Error', description: error.message, variant: 'destructive' });
        setUploadProgress({ current: 0, total: 0 });
      }
    });
  }, [parsedGuides, courseId, onUpdate, toast]);

  const handleDeleteGuide = (guideId: string) => {
    startTransition(async () => {
      try {
        await deleteStudyGuide(courseId, guideId);
        toast({ title: 'Success', description: 'Study guide deleted' });
        onUpdate();
      } catch (error: any) {
        toast({ title: 'Error', description: error.message, variant: 'destructive' });
      }
    });
  };

  const getDifficultyColor = (diff: string) => {
    switch (diff) {
      case 'beginner': return 'bg-green-500';
      case 'intermediate': return 'bg-yellow-500';
      case 'advanced': return 'bg-red-500';
      default: return 'bg-gray-500';
    }
  };

  return (
    <div className="space-y-6">
      <div className="flex gap-2">
        <Dialog open={isCreateOpen} onOpenChange={(open) => {
          setIsCreateOpen(open);
          if (!open) resetForm();
        }}>
          <DialogTrigger asChild>
            <Button className="bg-cyan-600 hover:bg-cyan-700">
              <Plus className="w-4 h-4 mr-2" />
              Add Study Guide
            </Button>
          </DialogTrigger>
          <DialogContent className="max-w-4xl max-h-[90vh] overflow-y-auto">
            <DialogHeader>
              <DialogTitle>{editingGuide ? 'Edit Study Guide' : 'Create Study Guide'}</DialogTitle>
            </DialogHeader>
            <div className="space-y-4">
              <div>
                <Label>Title</Label>
                <Input 
                  value={formData.title}
                  onChange={(e) => setFormData({ ...formData, title: e.target.value })}
                  placeholder="e.g., Photosynthesis Mastery Guide"
                />
              </div>

              <div>
                <Label>Description</Label>
                <Textarea 
                  value={formData.description}
                  onChange={(e) => setFormData({ ...formData, description: e.target.value })}
                  rows={2}
                  placeholder="Brief overview of what this guide covers..."
                />
              </div>

              <div className="grid grid-cols-3 gap-4">
                <div>
                  <Label>Difficulty</Label>
                  <Select 
                    value={formData.difficulty} 
                    onValueChange={(v) => setFormData({ ...formData, difficulty: v as any })}
                  >
                    <SelectTrigger>
                      <SelectValue />
                    </SelectTrigger>
                    <SelectContent>
                      <SelectItem value="beginner">Beginner</SelectItem>
                      <SelectItem value="intermediate">Intermediate</SelectItem>
                      <SelectItem value="advanced">Advanced</SelectItem>
                    </SelectContent>
                  </Select>
                </div>

                <div>
                  <Label>Estimated Time</Label>
                  <Input 
                    value={formData.estimatedTime}
                    onChange={(e) => setFormData({ ...formData, estimatedTime: e.target.value })}
                    placeholder="e.g., 45 minutes"
                  />
                </div>

                <div>
                  <Label>Tags (comma-separated)</Label>
                  <Input 
                    value={formData.tags}
                    onChange={(e) => setFormData({ ...formData, tags: e.target.value })}
                    placeholder="e.g., biology, cells"
                  />
                </div>
              </div>

              <div>
                <Label>Cover Image URL (optional)</Label>
                <Input 
                  value={formData.coverImage}
                  onChange={(e) => setFormData({ ...formData, coverImage: e.target.value })}
                  placeholder="https://..."
                />
              </div>

              <div>
                <Label>Content</Label>
                <Textarea 
                  value={formData.content}
                  onChange={(e) => setFormData({ ...formData, content: e.target.value })}
                  rows={16}
                  className="font-mono text-sm"
                  placeholder="Write your comprehensive study guide content here. Include sections, tips, examples, practice questions, etc."
                />
                <p className="text-xs text-gray-500 mt-1">
                  üí° Tip: Use markdown-style formatting. Supports line breaks and formatting.
                </p>
              </div>

              <div className="flex justify-end gap-2 pt-4">
                <Button variant="outline" onClick={() => {
                  setIsCreateOpen(false);
                  resetForm();
                }}>
                  Cancel
                </Button>
                <Button 
                  onClick={handleSaveGuide}
                  disabled={isPending || !formData.title || !formData.content}
                  className="bg-cyan-600 hover:bg-cyan-700"
                >
                  {editingGuide ? 'Update Guide' : 'Create Guide'}
                </Button>
              </div>
            </div>
          </DialogContent>
        </Dialog>

        <Dialog open={isBulkImportOpen} onOpenChange={setIsBulkImportOpen}>
          <DialogTrigger asChild>
            <Button variant="outline" className="border-cyan-600 text-cyan-600 hover:bg-cyan-50">
              <FileUp className="w-4 h-4 mr-2" />
              Bulk Import
            </Button>
          </DialogTrigger>
          <DialogContent className="max-w-4xl max-h-[90vh] overflow-y-auto">
            <DialogHeader>
              <DialogTitle className="flex items-center gap-2">
                Bulk Import Study Guides
                <Button
                  variant="ghost"
                  size="sm"
                  onClick={() => setIsFormatGuideOpen(true)}
                >
                  <HelpCircle className="w-4 h-4" />
                </Button>
              </DialogTitle>
            </DialogHeader>
            <div className="space-y-4">
              <div>
                <Label className="flex items-center gap-2">
                  Paste Formatted Study Guides (Auto-parsing enabled)
                  {parsedGuides.length > 0 && (
                    <span className="text-xs px-2 py-0.5 bg-green-100 text-green-700 rounded-full font-medium">
                      ‚úì {parsedGuides.length} Guide(s) Ready - Units specified in syntax
                    </span>
                  )}
                  {bulkText.trim() && !parsedGuides.length && (
                    <span className="text-xs px-2 py-0.5 bg-gray-100 text-gray-600 rounded-full font-medium animate-pulse">
                      Parsing...
                    </span>
                  )}
                </Label>
                <Textarea
                  value={bulkText}
                  onChange={(e) => setBulkText(e.target.value)}
                  rows={14}
                  className="font-mono text-sm"
                  placeholder="Paste study guides in :::GUIDE::: format (click ? for guide)..."
                />
              </div>

              {parsedGuides.length > 0 && (
                <div className="space-y-2 max-h-96 overflow-y-auto">
                  <h3 className="font-semibold text-green-600">üìö Parsed {parsedGuides.length} Guide(s):</h3>
                  {parsedGuides.map((guide, idx) => {
                    const unit = guide.unitNumber ? content.units[guide.unitNumber - 1] : null;
                    return (
                      <Card key={idx} className="p-4 border-green-200 bg-green-50/50">
                        <div className="flex items-center gap-2 mb-2">
                          {unit && (
                            <span className="text-xs font-medium bg-cyan-600 text-white px-2 py-0.5 rounded">
                              Unit {guide.unitNumber}: {unit.title}
                            </span>
                          )}
                          <Badge className={getDifficultyColor(guide.difficulty || 'intermediate')}>
                            {guide.difficulty || 'intermediate'}
                          </Badge>
                        </div>
                        <div className="flex-1">
                          <p className="font-medium">{guide.title}</p>
                          {guide.description && (
                            <p className="text-sm text-muted-foreground">{guide.description}</p>
                          )}
                          <p className="text-xs text-gray-500 mt-1">
                            {guide.estimatedTime && ('‚è±Ô∏è ' + guide.estimatedTime)}
                            {guide.tags && guide.tags.length > 0 && (' ‚Ä¢ ' + guide.tags.length + ' tags')}
                          </p>
                        </div>
                      </Card>
                    );
                  })}
                </div>
              )}

              <div className="flex justify-end gap-2 pt-4">
                {parsedGuides.length > 0 && (
                  <>
                    {uploadProgress.total > 0 && (
                      <div className="w-full mb-3">
                        <div className="flex items-center justify-between mb-1">
                          <span className="text-sm text-muted-foreground">
                            ‚ö° Batch uploading for faster performance...
                          </span>
                          <span className="text-sm font-medium">
                            {uploadProgress.current}/{uploadProgress.total}
                          </span>
                        </div>
                        <div className="w-full h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                          <div 
                            className="h-full bg-gradient-to-r from-green-500 to-emerald-600 transition-all duration-300"
                            style={{ width: `${(uploadProgress.current / uploadProgress.total) * 100}%` }}
                          />
                        </div>
                      </div>
                    )}
                    <Button 
                      onClick={handleSaveBulkGuides}
                      disabled={isPending}
                      className="bg-green-600 hover:bg-green-700"
                    >
                      {isPending && uploadProgress.total > 0 ? (
                        <>
                          <span className="mr-2 inline-block animate-spin">‚è≥</span>
                          Uploading {uploadProgress.current}/{uploadProgress.total}...
                        </>
                      ) : (
                        <>Save {parsedGuides.length} Guide(s)</>
                      )}
                    </Button>
                  </>
                )}
                <Button 
                  variant="ghost" 
                  onClick={() => {
                    setBulkText('');
                    setParsedGuides([]);
                  }}
                >
                  Clear
                </Button>
              </div>
            </div>
          </DialogContent>
        </Dialog>

        <Dialog open={isFormatGuideOpen} onOpenChange={setIsFormatGuideOpen}>
          <DialogContent className="max-w-4xl max-h-[90vh] overflow-y-auto">
            <DialogHeader>
              <DialogTitle>Study Guides Import Format Guide</DialogTitle>
            </DialogHeader>
            <pre className="text-xs bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto whitespace-pre-wrap">
              {STUDYGUIDE_FORMAT_GUIDE}
            </pre>
          </DialogContent>
        </Dialog>
      </div>

      {/* Study Guides List */}
      <div className="grid gap-4">
        {content.studyGuides.length === 0 ? (
          <Card className="p-8 text-center">
            <GraduationCap className="w-12 h-12 mx-auto mb-4 text-gray-400" />
            <p className="text-gray-500">No study guides yet. Create your first guide!</p>
          </Card>
        ) : (
          content.studyGuides.map((guide) => (
            <Card key={guide.id} className="p-6">
              <div className="flex items-start gap-4">
                {guide.coverImage && (
                  <img 
                    src={guide.coverImage} 
                    alt={guide.title}
                    className="w-32 h-32 object-cover rounded-lg"
                  />
                )}
                <div className="flex-1">
                  <div className="flex items-start justify-between mb-2">
                    <div>
                      <h3 className="text-xl font-bold">{guide.title}</h3>
                      {guide.description && (
                        <p className="text-sm text-gray-600 mt-1">{guide.description}</p>
                      )}
                    </div>
                    <div className="flex gap-2">
                      <Button
                        variant="ghost"
                        size="sm"
                        onClick={() => handleEdit(guide)}
                        disabled={isPending}
                      >
                        <Edit className="w-4 h-4 text-blue-500" />
                      </Button>
                      <Button
                        variant="ghost"
                        size="sm"
                        onClick={() => handleDeleteGuide(guide.id)}
                        disabled={isPending}
                      >
                        <Trash2 className="w-4 h-4 text-red-500" />
                      </Button>
                    </div>
                  </div>

                  <div className="flex items-center gap-2 mb-3">
                    <Badge className={getDifficultyColor(guide.difficulty)}>
                      {guide.difficulty}
                    </Badge>
                    {guide.estimatedTime && (
                      <Badge variant="outline" className="flex items-center gap-1">
                        <Clock className="w-3 h-3" />
                        {guide.estimatedTime}
                      </Badge>
                    )}
                    {guide.tags && guide.tags.map((tag, idx) => (
                      <Badge key={idx} variant="secondary" className="text-xs">
                        {tag}
                      </Badge>
                    ))}
                  </div>

                  <div className="text-sm text-gray-700 max-h-32 overflow-y-auto">
                    <p className="whitespace-pre-wrap">{guide.content.substring(0, 400)}...</p>
                  </div>
                </div>
              </div>
            </Card>
          ))
        )}
      </div>
    </div>
  );
}
